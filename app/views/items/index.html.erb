<div class="row">
	<div class="col-md-2" style="padding:0;">
		<%= render 'side_nav' %>
	</div>
	<div class="col-md-9" style="margin-top:50px; margin-left:20px;">
		<% @items.each do |i| %>

			<div class="col-md-3">
				<div id="item-card">
					<%= image_tag "item1.jpg" %>
					<div class="info">
						<div class="description">
							<%= i.description.first(10) %>
						</div>
						<div class="title">
							<%= i.name.first(6) %>
						</div>
						<div class="price">
							<%= "$"+i.price.to_s %>
						</div>
						
					</div>
				</div>
			</div>

		<% end %>
	</div>
</div>